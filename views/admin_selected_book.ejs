<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="/css/styles.css">
      <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
    <title>Admin Audio</title>

    <style>
      textarea{
        background-color: rgb(222, 215, 215); 
        border-radius: 0.5rem; 
        padding: .5rem; margin-top: 0.5rem;
      }
      .textarear1{
        min-width: 50vw;
      }
    
      .myinput{
        padding: .5rem;
        transition: ease-in;
        transition-duration: .2s;
      }
      .myinput:focus {
        outline: none  !important; /* Remove the default outline */
        border: 2px solid blue !important; 
        border-radius: 1rem;
        
}
    </style>
</head>
<body>
    <div class=" overflow-hidden">
        <div class="sidebar">
            <div class="logo-details">
              <box-icon type='logo' color="white" name='deezer'></box-icon>
                <div class="logo_name mx-2">DoodleRam</div>
                <i class='bx bx-menu' id="btn" ></i>
            </div>
            <ul class="nav-list">
              <li>
                  <i class='bx bx-search' ></i>
                <input type="search" placeholder="Search...">
                <span class="tooltip">Search</span>
              </li>
              <li>
              <a href="/">
                <i class='bx bx-user' ></i>
                <span class="links_name">User</span>
              </a>
              <span class="tooltip">User</span>
            </li>
            <li>
              <a href="#books">
                <i class='bx bx-book-content' ></i>
                <span class="links_name">Books</span>
              </a>
              <span class="tooltip">Books</span>
            </li>
            <li>
              <a href="/">
                <i class='bx bxs-music' ></i>
                <span class="links_name">songs</span>
              </a>
              <span class="tooltip">Songs</span>
            </li>
            <li>
              <a href="/admin/add">
                <i class='bx bxs-folder-plus  text-lg'></i>
                <span class="links_name">Add items</span>
              </a>
              <span class="tooltip">Add items</span>
            </li>
          </ul>
        </div>
        <section class="home-section wrapper" id="blur">
          <div class="hidden md:block m-5 px-20 absolute z-10 sm:flex items-center bg-transparent w-full">
            <header class="text-gray-100 body-font w-full">
              <div class="container mx-auto md:flex md:justify-between p-5 items-center">
                <a href="/" class="flex title-font font-medium items-center text-gray-100 mb-4 md:mb-0">
                  <span class="ml-3 text-3xl">DoodleRam</span>
                </a>
              </div>
            </header>
          </div>
            <div>
              <div class="relative sm:px-20 sm:pt-16 px-4 pt-0 pb-16 h-auto w-full object-cover" style="background-image: linear-gradient(
                rgba(108, 110, 117, 0.603), 
                rgba(188, 187, 197, 0.596)
                ), url('/img/music4.jpg'); background-position: center;">
                <div class="flex flex-col justify-center items-center text-center py-3 sm:py-5 md:py-10">
                    <div class="w-2/3 pt-12 md:pt-8 text-gray-100" > 
                        <p class="text-4xl"><%=singlePdf.title%></p>
                    </div>
                </div>
              </div>
                <div>
                    <div class="w-4/5 md:flex h-auto mt-24">
                        <div class="w-full md:w-1/3 mx-6">
                            <div class="border-2 border-gray-400 h-40 mx-2 object-cover" style="background-image: url('<%=singlePdf.thumbnail%>'); background-position: center;">
                            </div>
                            <div class="my-6 mx-2 space-y-2 text-gray-800">
                              <p>Year Published: <span><%=singlePdf.yearWritten%></span></p>
                              <p>Page(s): <span><%=singlePdf.pages%></span></p>  
                              <form class="my-5" method="post" action="/admin/change/pdfcover" enctype="multipart/form-data">
                                <label class="text-gray-700">Change book cover</label>
                                <input class="mb-3" type="file" name="pdfimage" accept="image/*">
                                <input type="hidden" name="id" value="<%=singlePdf._id%>">
                                <button type="submit"> <a class="mt-12 py-2 px-2 bg-blue-600 hover:bg-blue-800 text-white ">Save Image</a></button>
                              </form>
                                                           
                            </div>
                        </div>
                        <div class="w-full md:w-2/3 mx-6" style="position:relative;">
                          <form action="/admin/change/pdf" method="post">
                            <input type="text" name="title" value="<%=singlePdf.title%>" class="text-3xl text-gray-700 font-semibold myinput">
                            
                            <!--Book snippet goes here-->
                            <textarea name="snippet" class="text-lg text-gray-700 block textarear1 myinput"><%=singlePdf.snippet%></textarea>
                            <p class="text-sm text-gray-700 my-2">By: <input type="text" name="author" value="<%=singlePdf.author %>" class="myinput"></p>
                            <input type="hidden" value="<%=singlePdf._id %>" name="id" >
                            

                            <div class="flex mt-8 space-x-8">
                              <a download class="py-2 px-2 bg-blue-600 hover:bg-blue-800 text-white ">Download<i class='mx-3 text-xl bx bxs-download'></i></a>
                              <a href="https://paystack.com/pay/mymusic" class="py-2 px-2 bg-blue-600 hover:bg-blue-800 text-white ">Donate<i class='bx bx-donate-heart mx-1 text-xl'></i></a>
                            </div>

                            <!--Book description goes here-->
                            <textarea name="description" class="text-lg text-gray-700 block mt-5 textarear1 myinput"><%=singlePdf.description%></textarea>
                            <div class="mt-8" style="position: absolute; bottom:-20%; right: 10px;" >
                              <button type="submit"><a class="mt-12 py-2 px-2 bg-blue-600 hover:bg-blue-800 text-white">Save</a></button>
                              <div><span class="cursor-pointer mt-12 mx-5 py-2 px-2 bg-red-600 hover:bg-red-700 text-white delete_Btn" onclick="delete_popup()"><i class='bx mx-2 text-lg bx-trash'></i></span></div>
                            </div>
                          </form>
                                                        
                           
                              
                        </div>
                    </div>
                </div>
                <div id="books" class="mt-36 mx-5 md:mx-16 lg:mx-28">
                  <a class="text-xl text-gray-600">Check out Helpful Books</a>
              </div>
              <div class="flex justify-center mx-auto w-10/12 bg-gray-300 h-0.5 shadow-sm"></div>
              <div class="flex flex-wrap">
                <% pdfList.forEach((item)=>{ %>
                <div class="w-full lg:w-1/3 sm:w-1/2 border-2 border-gray-200 mx-5 sm:mx-16 h-96 md:h-96 m-5 hover:border-gray-600 transition duration-150 ease-in-out book-grid">
                  <div class="h-full space-y-2">
                    <div>
                      <a href="/admin/selected_book/<%=item._id%>" class="h-2/3 object-cover">
                        <div class="h-2/3 object-cover" style="background-image: url('<%=item.thumbnail%>'); background-size: cover; background-position: center;">
                        </div>
                      </a>
                    </div>
                    
                    <div class="mx-2">
                      <p class=" font-bold text-xl text-gray-800"><%=item.title%></p>
                      
                      <!--Description goes here-->
                      <p class="text-gray-800"><%=item.snippet.substring(0,50)+" ..."%></p>
                      <a href="/admin/selected_book/<%=item._id%>"><button type="button" class=" inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">Read more</button></a>
                    </div>
                  </div>     
                </div>
                <% }) %>
              </div>
            </div>   
            <footer class="text-gray-600 body-font mt-40 bg-white">
              <div class="container px-5 py-24 mx-auto flex md:items-center lg:items-start md:flex-row md:flex-nowrap flex-wrap flex-col">
                <div class="w-64 flex-shrink-0 md:mx-0 mx-auto text-center md:text-left">
                  <a href="/" class="flex title-font font-medium items-center md:justify-start justify-center text-gray-900">
                    <span class="ml-3 text-xl">DoodleRam</span>
                  </a>
                  <p class="mt-2 text-sm mx-6 text-gray-500">Get amazing tunes and books here on DoodleRam</p>
                </div>
                <div class="flex-grow flex flex-wrap md:pl-20 -mb-10 md:mt-0 mt-10 md:text-left text-center">
                  <div class="lg:w-1/2 md:w-1/2 w-full px-4">
                    <h2 class="title-font font-medium text-gray-900 tracking-widest text-sm mb-3">QUICK LINKS</h2>
                    <nav class="list-none mb-10 space-y-5">
                      <li>
                        <a href="/" class="text-gray-600 hover:text-gray-800">Home</a>
                      </li>
                      <li>
                        <a href="/books" class="text-gray-600 hover:text-gray-800">Books</a>
                      </li>
                      <li>
                        <a href="#songs" class="text-gray-600 hover:text-gray-800">Songs</a>
                      </li>
                    </nav>
                  </div>
                  <div class="lg:w-1/2 md:w-1/2 w-full px-4">
                    <h2 class="title-font font-medium text-gray-900 tracking-widest text-sm mb-3">MORE LINKS</h2>
                    <nav class="list-none mb-10 space-y-5">
                      <li>
                        <a href="/login" class="text-gray-600 hover:text-gray-800">Amin</a>
                      </li>
                    </nav>
                  </div>
                </div>
              </div>
              <div class="bg-gray-100">
                <div class="container mx-auto py-4 px-5 flex flex-wrap flex-col sm:flex-row">
                  <p class="text-gray-500 text-sm text-center sm:text-left">© 2022 De-General —
                    <a href="https://twitter.com/thats_nkay?s=09" rel="noopener noreferrer" class="text-gray-600 ml-1" target="_blank">@De-General</a>
                  </p>
                  <span class="inline-flex sm:ml-auto sm:mt-0 mt-2 justify-center sm:justify-start">
                    <a class="text-gray-500">
                      <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
                      </svg>
                    </a>
                    <a class="ml-3 text-gray-500">
                      <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
                      </svg>
                    </a>
                    <a class="ml-3 text-gray-500">
                      <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                        <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                        <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"></path>
                      </svg>
                    </a>
                    <a class="ml-3 text-gray-500">
                      <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="0" class="w-5 h-5" viewBox="0 0 24 24">
                        <path stroke="none" d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"></path>
                        <circle cx="4" cy="4" r="2" stroke="none"></circle>
                      </svg>
                    </a>
                  </span>
                </div>
              </div>
            </footer>
        </section>
        <div>
          <div class="md:mx-20 lg:mx-32 w-2/3 md:w-1/2 bg-gray-200 shadow-xl h-auto py-4 rounded-md" id="popup">
            <div class="flex justify-between mx-10 md:mx-20">
              <h2 class="flex justify-center text-3xl font-bold text-gray-700">Confirm Delete</h2>
              <a class="text-3xl text-gray-700 font-bold cursor-pointer" onclick="cancel()">&times;</a>
            </div>
            <div class="flex justify-start mt-2">
              <div class="m-1 w-4/5 mx-auto h-0.5 bg-blue-700 rounded-full inline-flex"></div>
            </div>
            <form class="w-full mx-10 md:mx-20" action="/admin/delete/pdf" method="post">
                <input type="hidden" value="<%=singlePdf.name%>" name="name">
                <input type="hidden" value="<%=singlePdf._id%>" name="id">
              <p class="text-lg mt-3 text-gray-700 block">Are you sure you want to delete?</p>
              <p class="mt-2 text-gray-700 block"><%=singlePdf.title%></p>
              <div class="w-full flex justify-center space-x-2">
                <button type="submit"><a class="p-2 rounded bg-red-600 text-white ">yes</a></button>
                <a class="p-2 px-3 rounded bg-gray-600 text-white cursor-pointer" onclick="cancel()">No</a>
              </div>             
            </form>
          </div>
        </div>
    </div>
</body>
<script src="/js/admin.js"></script>
<script>
  let sidebar = document.querySelector(".sidebar");
  let closeBtn = document.querySelector("#btn");
  let searchBtn = document.querySelector(".bx-search");

  closeBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("open");
    menuBtnChange();
  });

  searchBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("open");
    menuBtnChange();
  });

  function menuBtnChange() {
   if(sidebar.classList.contains("open")){
     closeBtn.classList.replace("bx-menu", "bx-menu-alt-right");
   }else {
     closeBtn.classList.replace("bx-menu-alt-right","bx-menu");
   }
  }
  </script>
</html>